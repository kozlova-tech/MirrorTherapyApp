<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Container for two camera previews -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Normal camera preview -->
        <androidx.camera.view.PreviewView
            android:id="@+id/previewViewNormal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Mirrored camera preview -->
        <androidx.camera.view.PreviewView
            android:id="@+id/previewViewMirror"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleX="-1"
            app:implementationMode="compatible" />
    </LinearLayout>

    <!-- Interactive overlay on top -->
    <com.example.mirrortherapyapp.GameOverlayView
        android:id="@+id/gameOverlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

</FrameLayout>
